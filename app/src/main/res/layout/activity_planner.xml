<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/plannerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Planner">

    <LinearLayout
        android:id="@+id/linearLayout_Header"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:background="@color/salmon"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout_Calendar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="180dp"
            android:layout_height="50sp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/glacial_indifference_bold"
            android:text="PLANNER"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="35sp"></TextView>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout_Calendar"
        android:layout_width="354dp"
        android:layout_height="124dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="29dp"
        android:background="@color/salmon"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout_Header">

    </LinearLayout>

    <TextView
        android:id="@+id/textView_TaskList"
        android:layout_width="121dp"
        android:layout_height="34dp"
        android:layout_gravity="center"
        android:layout_marginStart="29dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="261dp"
        android:fontFamily="@font/glacial_indifference_bold"
        android:text="TASK LIST:"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout_Calendar"></TextView>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/linearLayout_NoTask_Temp"
        android:layout_width="228dp"
        android:layout_height="259dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.607">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="195dp"
            android:layout_height="196dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="2dp"
            app:layout_constraintBottom_toTopOf="@+id/textView_NoTask"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.882"
            app:srcCompat="@drawable/app_logo" />

        <TextView
            android:id="@+id/textView_NoTask"
            android:layout_width="224dp"
            android:layout_height="51dp"
            android:layout_gravity="center"
            android:fontFamily="@font/glacial_indifference_bold"
            android:text="No tasks are available. \nTap + to create new task."
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="15sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView2"></TextView>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/label_button"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/profiletemp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.277"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.914"
        app:shapeAppearanceOverlay="@style/Circle">

    </com.google.android.material.imageview.ShapeableImageView>

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/create_button"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/profiletemp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.914"
        app:shapeAppearanceOverlay="@style/Circle">

    </com.google.android.material.imageview.ShapeableImageView>

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/sort_button"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/profiletemp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.725"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.914"
        app:shapeAppearanceOverlay="@style/Circle">

    </com.google.android.material.imageview.ShapeableImageView>


</androidx.constraintlayout.widget.ConstraintLayout>